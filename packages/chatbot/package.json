{
  "name": "cfc-push-chatbot",
  "version": "2.0.0",
  "description": "Chatbot WhatsApp para CFC PUSH",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "echo \"No tests specified\" && exit 0",
    "clean": "rm -rf dist",
    "format": "prettier --write \"src/**/*.ts\"",
    "render-build": "npm ci --include=dev && npm run build"
  },
  "dependencies": {
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^8.1.0",
    "mongoose": "^8.0.0",
    "morgan": "^1.10.1",
    "twilio": "^4.19.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.10",
    "@types/node": "^20.8.0",
    "prettier": "^3.0.3",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  },
  "keywords": [
    "whatsapp",
    "chatbot",
    "church",
    "cfc",
    "twilio"
  ],
  "author": "CFC PUSH",
  "license": "MIT"
}